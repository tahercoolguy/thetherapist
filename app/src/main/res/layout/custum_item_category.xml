<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/clickLL"
    android:layout_margin="5dp"
    android:elevation="@dimen/elevation"
     android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="match_parent"
        android:src="@drawable/button_rectangle_primary_color_selector"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:riv_corner_radius="13dp"
        android:id="@+id/img"
        android:layout_height="70dp"></com.makeramen.roundedimageview.RoundedImageView>


    <TextView
        android:id="@+id/interestTxt"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_rectangle_white"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:minWidth="100dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:backgroundTint="@color/white"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
         android:elevation="@dimen/elevation"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="10dp"
        android:singleLine="true"
        android:text="Arts"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal"></TextView>
</RelativeLayout>