<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Add_Image_Video_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:orientation="horizontal">

        <ImageView
            android:layout_width="200dp"
            android:scaleType="fitXY"
            android:id="@+id/img1"
            android:layout_weight="1"
            android:layout_margin="5dp"
             android:src="@drawable/button_rectangle_primary_color_selector"
            android:layout_height="200dp"></ImageView>

        <com.master.design.blackeye.Helper.MyVideoView
            android:layout_width="200dp"
            android:layout_weight="1"
            android:id="@+id/vd1"
            android:layout_margin="5dp"
            android:layout_height="200dp"></com.master.design.blackeye.Helper.MyVideoView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

        <ImageView
            android:layout_width="200dp"
            android:id="@+id/img2"
            android:src="@drawable/button_rectangle_primary_color_selector"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:layout_height="200dp"></ImageView>

        <com.master.design.blackeye.Helper.MyVideoView
            android:layout_width="200dp"
            android:layout_weight="1"
            android:id="@+id/vd2"
            android:layout_margin="5dp"
            android:layout_height="200dp"></com.master.design.blackeye.Helper.MyVideoView>
    </LinearLayout>


</LinearLayout>