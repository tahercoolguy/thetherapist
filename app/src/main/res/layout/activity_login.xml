<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/login_backgroud"
    tools:context=".Activity.LoginActivity">
    <ImageView
        android:layout_width="match_parent"
         android:scaleType="fitXY"
        android:layout_height="250dp">

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Log in"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"

            android:layout_height="wrap_content">

        </TextView>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="40dp"

                    android:layout_marginBottom="20dp"
                    android:background="@drawable/full_rounded_grad_with_transparent_background"
                    >o
                    <EditText
                        android:layout_width="match_parent"

                        android:id="@+id/emailET"
                        android:inputType="textEmailAddress"
                        android:hint="@string/email"
                        android:textSize="@dimen/text_size_normal"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"></EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="10dp"

                    android:layout_marginBottom="40dp"
                    android:background="@drawable/full_rounded_grad_with_transparent_background"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/passwordET"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:textSize="@dimen/text_size_normal"

                        android:background="@android:color/transparent"

                        android:layout_height="wrap_content"></EditText>
                </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <Button
                android:text="Sign In"
                android:layout_width="150dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/signInBtn"
                android:layout_marginRight="20dp"

                android:background="@drawable/rounded_corner_white"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:text="Sign Up"
                android:layout_width="150dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/signUpBtn"


                android:background="@drawable/rounded_corner_grey"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content">
            <Button
                android:text="@string/gues"
                android:layout_width="320dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/guestBtn"


                android:background="@drawable/rounded_corner_guest"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>
</LinearLayout>
</LinearLayout>