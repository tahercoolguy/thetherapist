<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".Activity.Conversation_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="55dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/backImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="10dp"
                android:src="@drawable/ic_back_arrow"></ImageView>

            <ImageView
                android:id="@+id/notificationImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_notification_come"

                android:visibility="gone"></ImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileCircleImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:minWidth="40dp"
                android:minHeight="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_profile"
                app:riv_corner_radius="100dp"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/userNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Rachel"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_Heading"
                android:textStyle="bold"></TextView>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvRcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/addRL"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/ic_open_icon"
            android:padding="7dp">

            <ImageView
                android:id="@+id/addImg"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_add"></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/messageRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"

            android:background="@drawable/rectangle_message"
            android:backgroundTint="#80FFFFFF"
            android:backgroundTintMode="src_over"
            android:gravity="center">

            <EditText
                android:id="@+id/messageET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginEnd="45dp"
                android:backgroundTint="@color/white"
                android:hint="@string/message"
                android:imeOptions="actionSend"
                android:minHeight="50dp"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="@dimen/text_size_normal"></EditText>

            <ImageView
                android:id="@+id/emojiImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"

                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_emoji"
                android:visibility="gone"></ImageView>

            <ImageView
                android:id="@+id/sendImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"

                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_send_24"></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/textRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="@drawable/rectangle_message"
            android:backgroundTint="#80FFFFFF"
            android:backgroundTintMode="src_over"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:minHeight="50dp"
                android:gravity="center"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:text="you are not friend now"
                android:textSize="@dimen/text_size_normal"></TextView>

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>